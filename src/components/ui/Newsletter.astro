---
interface Props {
	title?: string
	subtitle?: string
}

const {
	title = 'Join Our Newsletter',
	subtitle = 'Stay updated with our latest news and updates delivered to your inbox.'
} = Astro.props
---

<section class="relative overflow-hidden bg-gradient-to-br from-primary-100 to-primary-200 py-16">
	<!-- Decorative circles -->
	<div
		class="absolute left-0 top-0 h-32 w-32 -translate-x-1/2 -translate-y-1/2 rounded-full bg-primary-500/20"
	>
	</div>
	<div
		class="absolute bottom-0 right-0 h-48 w-48 translate-x-1/3 translate-y-1/3 rounded-full bg-primary-500/20"
	>
	</div>

	<div class="relative mx-auto max-w-4xl px-4 text-center">
		<h2 class="mb-3 text-4xl font-bold tracking-tight text-primary-900 md:text-5xl">
			{title}
		</h2>
		<p class="mb-8 text-lg text-primary-900/90">
			{subtitle}
		</p>

		<form class="mx-auto flex max-w-2xl flex-col gap-3 sm:flex-row">
			<input
				type="email"
				placeholder="Enter your email"
				class="focus:border-primary flex-1 rounded-lg border-2 border-transparent px-4 py-3 text-primary-900 placeholder-gray-400 transition focus:outline-none"
				required
			/>
			<button
				type="submit"
				class="bg-primary focus:ring-primary rounded-lg bg-primary-900 px-6 py-3 font-semibold text-white transition hover:bg-primary-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-primary-600"
			>
				Subscribe
			</button>
		</form>
	</div>
</section>
